{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist/",
    "lib": ["es2015", "dom"],
    },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  },
}